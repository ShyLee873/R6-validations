<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="mx-5">Customers</h1>

  <table class="table table-striped justify-content-center">
    <thead>
      <tr>
        <th>ID</th>
        <th>Full name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Signed Up</th>
        <th>Actions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="align-middle">
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.full_name %></td>
          <td><%= customer.phone %></td>
          <td><%= customer.email %></td>
          <td><%= customer.created_at %></td>
          <td class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'Show', customer, class: "btn btn-outline-info btn-sm" %>
            <%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-outline-info btn-sm" %>
            <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="container">
    <div class="col-md-12 text-center my-3">
      <div class="btn-group" role="group" aria-label="Mini Nav links">
        <%= link_to 'New Customer', new_customer_path, class: "btn btn-info btn-sm" %> 
        <%= link_to 'Orders', orders_path, class: "btn btn-info btn-sm" %>
      </div>
    </div>
  </div>
  

</div>
