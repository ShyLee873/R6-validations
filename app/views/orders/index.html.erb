<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="mx-5">Orders</h1>

  <table class="table table-striped mx-5 align-center">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Product Count</th>
        <th>Customer ID</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.product_name %></td>
          <td><%= order.product_count %></td>
          <td><%= order.customer_id %></td>
          <td class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'Show', order, class: "btn btn-outline-info btn-sm" %>
            <%= link_to 'Edit', edit_order_path(order), class: "btn btn-outline-info btn-sm" %>
            <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <div class="container">
    <div class="col-md-12 text-center my-3">
      <div class="btn-group" role="group" aria-label="Basic example">
        <%= link_to 'New Order', new_order_path, class: "btn btn-info btn-sm" %> 
        <%= link_to 'Customers', customers_path, class: "btn btn-info btn-sm" %>
      </div>
    </div>      
  </div>  

</div>