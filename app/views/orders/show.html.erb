<p id="notice"><%= notice %></p>

<div class=" row my-5">
  <div class="col">
      <h2 class="text-center">Customer Name</h2>
      <div class="my-5" style="text-align:center">
        <%= @order.customer.full_name %>
        <p class="mt-3">Customer ID: <%= @order.customer_id %></p>
      </div>
      <div class="text-center">
        <%= link_to 'show', customer_url(@order.customer), class: "btn btn-info btn-sm" %>
      </div>  
  </div>

  <div class="col">
    <h2 class="text-center">Order</h2>
    <table class="table table-striped mt-5">
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Ordered On</th>
      </tr>
      <td><%= @order.product_name %></td>
      <td style="text-align:center"><%= @order.product_count %></td>
      <td><%= @order.created_at %></td>
    </table>
  </div>
</div>

<div class="row">
    <div class="col text-center my-5">
      <div class="btn-group" role="group" aria-label="Basic example">
        <%= link_to 'Edit', edit_order_path(@order), class: "btn btn-info btn-sm" %> 
        <%= link_to 'Back', orders_path, class: "btn btn-info btn-sm" %>
      </div>
    </div>      
  </div>  